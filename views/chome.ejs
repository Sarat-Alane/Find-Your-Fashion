<body class="w-full">
  <nav class="navigation-bar bg-purple-800 text-white flex items-stretch">
    <div class="nav-left flex items-center cursor-pointer w-1/2">
      <img class="logo w-40 h-20 border-y-purple-800 border-2" src="/img/logo.jpg">
      <input type="text" placeholder="  Search for Products , Brands and More . . ."
        class="w-96 h-1/2 mx-20 rounded-md bg-white placeholder-gray-500">
    </div>
    <div class="nav-right flex items-center w-3/12 ml-auto justify-around gap-4 box-border">
      <form action="/view-cart" method="GET">
        <button type="submit"
          class="bg-green-700 px-4 py-2 rounded-md text-white cursor-pointer hover:bg-green-900">View Cart</button>
      </form>
    </div>
  </nav>

  <div class="slideshow-container pt-8 pb-2 w-full">

    <div class="mySlides fade relative h-[80vh] w-full">
      <div class="numbertext w-full absolute right-4 bottom-2 text-right text-white z-10">1 / 3</div>
      <img src="https://media.gq.com/photos/654cf61bafc40d805fba35cf/16:9/w_1280,c_limit/best-t-shirts-for-men.jpg"
        class="h-full w-full">
      <div
        class="w-full h-12 absolute left-0 bottom-0 text-white bg-purple-900/40 bg-opacity-25 flex items-center justify-center">
        Men's Shirt</div>
    </div>

    <div class="mySlides fade relative h-[80vh] w-full">
      <div class="numbertext w-full absolute right-4 bottom-2 text-right text-white z-10">2 / 3</div>
      <img
        src="https://www.bombayshirts.com/cdn/shop/collections/1120x1200-collection-mens-shirts-custom-made-formal-shirts.jpg?v=1685700711"
        class="h-full w-full">
      <div
        class="w-full h-12 absolute left-0 bottom-0 text-white bg-purple-900/40 bg-opacity-25 flex items-center justify-center">
        Shirts
      </div>
    </div>

    <div class="mySlides fade relative h-[80vh] w-full">
      <div class="numbertext w-full absolute right-4 bottom-2 text-right text-white z-10">3 / 3</div>
      <img
        src="https://cdn.thewirecutter.com/wp-content/uploads/2020/04/messengerbag-lowres-2x1-2.jpg?auto=webp&quality=75&crop=2:1&width=1024"
        class="h-full w-full">
      <div
        class="w-full h-12 absolute left-0 bottom-0 text-white bg-purple-900/40 bg-opacity-25 flex items-center justify-center">
        Bags
      </div>

    </div>
  </div>

  <div class="w-fit mx-auto flex flex-row gap-4">
    <span class="dot bg-black/40 h-4 w-4 block rounded-full"></span>
    <span class="dot bg-black/40 h-4 w-4 block rounded-full"></span>
    <span class="dot bg-black/40 h-4 w-4 block rounded-full"></span>
  </div>

<div class="product-row my-6 border-x-0">
  <h2 class="text-lg px-4 py-5 text-white bg-purple-900 border-purple-300 border-b-1">Men's T-Shirts</h2>
  <div class="scrollmenu h-fit px-4 py-2 box-border flex gap-10 bg-gradient-to-b from-purple-900 via-purple-900/85 to-purple-900/75">
    <% if (menTshirts.length > 0) { %>
      <% menTshirts.forEach(element => { %>
        <a href="/product/<%= element.pid %>" class="w-1/6 group mb-5 rounded-t-md rounded-b-md border-black border-2">
          <img src="prodimg/<%= element.filename %>" class="w-full h-auto rounded-t-md" alt="image">
          <span class="block w-full border-black border-t-2 bg-green-700 group-hover:bg-green-900 text-white text-center py-4 rounded-b-md">View &rAarr;</span>
        </a>
      <% }); %>
    <% } else { %>
      <p class="text-white">No Products found! Please, Check after some time.</p>
    <% } %>
  </div>
</div>

